{{!-- New Bike View --}}
<div class="container">
    <h2 id="newRideText">ADD MY NEW RIDE!</h2>
    <form class="create-form">
        <input type="hidden" id="OwnerId" value="{{SomeWayToTrackOwnerID}}">
        <div class="form-group">
            <label for="bike">Make and Model:</label>
            <input type="text" id="makemodel" name="bike_name">
            <label for="type">Bike Type:</label>
            <input type="text" id="type" name="bike_type">
            <label for="mileage">Miles:</label>
            <input type="text" id="mileage" name="bike_miles">
            <label for="purchase">Purchase Date:</label>
            <input type="text" id="purchdate" name="purchase_date">
        </div>

        <button type="button" id="addBikeButton">Add Bike</button>
    </form>
</div>